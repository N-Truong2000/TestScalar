{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"Scalar": {
		// === Basic Configuration ===
		"Title": "My API Documentation",
		"EndpointPathPrefix": "/troy",
		"OpenApiRoutePattern": "/troy/{documentName}.json",

		// === URL Configuration ===
		"BundleUrl": null,
		"CdnUrl": "https://cdn.jsdelivr.net/npm/@scalar/api-reference",
		"ProxyUrl": null,
		"BaseServerUrl": "https://api.example.com",
		"DynamicBaseServerUrl": false,

		// === UI Appearance ===
		"Theme": "Mars", // Options: Purple, Solarized, Mars, DeepSpace, BluePlanet, Saturn, Default, Kepler, Moon, None
		"Layout": "classic", // Options: modern, classic
		"DarkMode": true, // true, false, null (auto)
		"ForceThemeMode": null, // "light", "dark", null
		"HideDarkModeToggle": false,
		"DefaultFonts": true,
		"CustomCss": "",
		"Favicon": "/image/favicon.ico",

		// === Sidebar & Navigation ===
		"ShowSidebar": true,
		"HideSearch": false,
		"SearchHotKey": "k",
		"TagSorter": "alpha", // alpha, method
		"OperationSorter": "alpha", // alpha, method, path
		"DefaultOpenAllTags": false,

		// === Content Display ===
		"OperationTitleSource": "summary", // summary, operationId, path
		"HideModels": false,
		"HideDownloadButton": false,
		"HideTestRequestButton": false,
		"HideClientButton": false,
		"ShowOperationId": false,
		"ExpandAllModelSections": false,
		"ExpandAllResponses": false,
		"OrderRequiredPropertiesFirst": true,
		"SchemaPropertyOrder": "alpha", // alpha, required-first

		// === HTTP Client Configuration ===
		"DefaultHttpClient": {
			"targetKey": "CSharp", // csharp, javascript, python, etc.
			"clientKey": "HttpClient" // httpclient, restsharp, etc.
		},
		"HiddenClients": false,
		"EnabledTargets": [
			"shell",
			"JavaScript",
			"csharp"
		],
		"EnabledClients": [
			"curl",
			"Fetch",
			"Axios",
			"HttpClient",
			"RestSharp"
		],

		// === Custom Content ===
		"HeadContent": "",
		"HeaderContent": "",
		"JavaScriptConfiguration": "",

		// === Authentication ===
		"Authentication": {
			"PreferredSecurityScheme": "bearerAuth",
			"ApiKey": {
				"Token": "your-api-key-here"
			},
			"Http": {
				"Basic": {
					"Username": "admin",
					"Password": "password"
				},
				"Bearer": {
					"Token": "your-bearer-token"
				}
			},
			"OAuth2": {
				"ClientId": "your-client-id",
				"Scopes": [ "read", "write" ]
			}
		},
		"PersistentAuthentication": true,

		// === Servers Configuration ===
		"Servers": [
			{
				"Url": "https://api.company.com",
				"Description": "Production Server"
			},
			{
				"Url": "https://staging-api.company.com",
				"Description": "Staging Server"
			},
			{
				"Url": "https://localhost:5001",
				"Description": "Local Development"
			}
		],

		// === Metadata ===
		"Metadata": {
			"Version": "1.0.0",
			"Author": "Your Name",
			"Company": "Your Company"
		},

		// === Download Configuration ===
		"DocumentDownloadType": "json", // json, yaml

		// === Internal Flags ===
		"DotNetFlag": false
	},
	"ApiVersions": [ "v1", "v2" ],
	"AllowedHosts": "*"
}
